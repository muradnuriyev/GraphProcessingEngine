<Window x:Class="GraphProcessingEngine.Gui.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GraphProcessingEngine.Gui.Wpf.Views"
        mc:Ignorable="d"
        Title="Graph Processing Engine"
        Height="800"
        Width="1280"
        Background="#0F172A">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Background="#111827" CornerRadius="12" Padding="16" Margin="0,0,12,0">
            <StackPanel>
                <TextBlock Text="Graph Processing Engine"
                           FontSize="20"
                           Foreground="White"
                           FontWeight="Bold" />
                <TextBlock Text="Interactive graph playground with BFS, DFS, Dijkstra and A*."
                           Margin="0,6,0,12"
                           TextWrapping="Wrap"
                           Foreground="#94A3B8" />

                <TextBlock Text="Path algorithm" FontWeight="SemiBold" Foreground="White" />
                <ComboBox ItemsSource="{Binding PathAlgorithms}"
                          SelectedItem="{Binding SelectedAlgorithm}"
                          Background="#1F2937"
                          Foreground="White"
                          Margin="0,6,0,12" />

                <Border Background="#1F2937" CornerRadius="8" Padding="12" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Demo graph"
                                   Foreground="White"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="Drag nodes or use the CLI/API to persist graphs. This view renders the latest in-memory graph."
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"
                                   Foreground="#9CA3AF" />
                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Edge weight" Foreground="#E5E7EB" />
                            <TextBox Text="{Binding EdgeWeight, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#111827"
                                     Foreground="White"
                                     BorderBrush="#1D4ED8"
                                     Margin="0,4,0,8" />
                            <CheckBox Content="Directed edge"
                                      IsChecked="{Binding EdgeDirected}"
                                      Foreground="White"
                                      Margin="0,0,0,10" />
                            <Button Content="Connect selected"
                                    Click="ConnectSelected_Click"
                                    Background="#2563EB"
                                    Foreground="White"
                                    Padding="8"
                                    BorderBrush="#1D4ED8"
                                    BorderThickness="1"
                                    Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch" />
                            <Button Content="Shortest path (Dijkstra)"
                                    Click="ShortestPath_Click"
                                    Background="#F59E0B"
                                    Foreground="White"
                                    Padding="8"
                                    BorderBrush="#D97706"
                                    BorderThickness="1"
                                    Margin="0,0,0,6"
                                    HorizontalAlignment="Stretch" />
                            <StackPanel>
                                <TextBlock Text="Traversal" Foreground="#E5E7EB" />
                                <ComboBox ItemsSource="{Binding TraversalAlgorithms}"
                                          SelectedItem="{Binding SelectedTraversal}"
                                          Background="#1F2937"
                                          Foreground="White"
                                          Margin="0,4,0,4" />
                                <Button Content="Traverse (BFS/DFS)"
                                        Click="Traverse_Click"
                                        Background="#6B21A8"
                                        Foreground="White"
                                        Padding="8"
                                        BorderBrush="#581C87"
                                        BorderThickness="1"
                                        Margin="0,0,0,6"
                                        HorizontalAlignment="Stretch" />
                            </StackPanel>
                            <Button Content="Clear highlights"
                                    Click="ClearHighlights_Click"
                                    Background="#374151"
                                    Foreground="White"
                                    Padding="8"
                                    BorderBrush="#4B5563"
                                    BorderThickness="1"
                                    HorizontalAlignment="Stretch" />
                            <Button Content="Delete selected nodes"
                                    Click="DeleteSelected_Click"
                                    Background="#B91C1C"
                                    Foreground="White"
                                    Padding="8"
                                    BorderBrush="#991B1B"
                                    BorderThickness="1"
                                    Margin="0,6,0,0"
                                    HorizontalAlignment="Stretch" />
                            <Button Content="Clear graph"
                                    Click="ClearGraph_Click"
                                    Background="#111827"
                                    Foreground="White"
                                    Padding="8"
                                    BorderBrush="#1F2937"
                                    BorderThickness="1"
                                    Margin="0,6,0,0"
                                    HorizontalAlignment="Stretch" />
                            <TextBlock Text="{Binding StatusMessage}"
                                       Foreground="#9CA3AF"
                                       TextWrapping="Wrap"
                                       Margin="0,10,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#0B1220" CornerRadius="12" Padding="12">
            <views:GraphCanvasView DataContext="{Binding Graph}" />
        </Border>
    </Grid>
</Window>
