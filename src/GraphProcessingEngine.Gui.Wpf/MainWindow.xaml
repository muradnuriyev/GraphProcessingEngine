<Window x:Class="GraphProcessingEngine.Gui.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GraphProcessingEngine.Gui.Wpf.Views"
        mc:Ignorable="d"
        Title="Graph Processing Engine"
        Height="480"
        Width="960"
        Background="#0F172A">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Background="#111827" CornerRadius="12" Padding="16" Margin="0,0,12,0">
            <StackPanel>
                <TextBlock Text="Graph Processing Engine"
                           FontSize="20"
                           Foreground="White"
                           FontWeight="Bold" />
                <TextBlock Text="Interactive graph playground with BFS, DFS, Dijkstra and A*."
                           Margin="0,6,0,12"
                           TextWrapping="Wrap"
                           Foreground="#94A3B8" />

                <TextBlock Text="Algorithms" FontWeight="SemiBold" Foreground="White" />
                <ItemsControl ItemsSource="{Binding Algorithms}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1F2937"
                                    CornerRadius="6"
                                    Padding="8"
                                    Margin="0,6,0,0">
                                <TextBlock Text="{Binding}" Foreground="#E5E7EB" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Background="#1F2937" CornerRadius="8" Padding="12" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Demo graph"
                                   Foreground="White"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="Drag nodes or use the CLI/API to persist graphs. This view renders the latest in-memory graph."
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"
                                   Foreground="#9CA3AF" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#0B1220" CornerRadius="12" Padding="12">
            <views:GraphCanvasView DataContext="{Binding Graph}" />
        </Border>
    </Grid>
</Window>
